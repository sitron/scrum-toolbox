{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>Day edit</h1>

<p class="helpers">
    {% if project.zebraUrl %}
        <a href="{{ project.zebraUrl|zebraDay(entity.date) }}">zebra url for this day</a>
    {% endif %}
    {% if project.jiraUrl %}
        <a href="{{ project.jiraUrl }}">jira url</a>
    {% endif %}
</p>

<form action="{{ path('day_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('day') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('day_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

