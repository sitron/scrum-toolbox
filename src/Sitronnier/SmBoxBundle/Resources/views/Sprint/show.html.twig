{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>Sprint</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Index</th>
            <td>{{ entity.index }}</td>
        </tr>
        <tr>
            <th>Story_points</th>
            <td>{{ entity.storypoints }}</td>
        </tr>
        <tr>
            <th>Business_value</th>
            <td>{{ entity.businessvalue }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('sprint') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('sprint_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('sprint_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
