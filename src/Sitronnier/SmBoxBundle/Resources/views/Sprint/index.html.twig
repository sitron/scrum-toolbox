{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>{% trans %}sprint_entity.list{% endtrans %}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>{% trans %}id{% endtrans %}</th>
            <th>{% trans %}index{% endtrans %}</th>
            <th>{% trans %}story_points{% endtrans %}</th>
            <th>{% trans %}business_value{% endtrans %}</th>
            <th>{% trans %}actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('sprint_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.index }}</td>
            <td>{{ entity.mandays }}</td>
            <td>{{ entity.storypoints }}</td>
            <td>{{ entity.businessvalue }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('sprint_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sprint_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('sprint_new') }}">{% trans %}add.sprint{% endtrans %}</a>
    </li>
</ul>
{% endblock %}

