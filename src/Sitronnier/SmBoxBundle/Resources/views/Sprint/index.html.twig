{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>Sprint list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Index</th>
            <th>Story_points</th>
            <th>Business_value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('sprint_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.index }}</td>
            <td>{{ entity.mandays }}</td>
            <td>{{ entity.storypoints }}</td>
            <td>{{ entity.businessvalue }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('sprint_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sprint_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('sprint_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
