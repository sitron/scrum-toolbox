{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block stylesheets %}
<link href="{{ asset('/bundles/sitronniersmbox/css/smbox.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('/bundles/sitronniersmbox/css/print.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block top %}
{% endblock %}

{% block body %}
<h1>{{ project }}</h1>

<div id="sprint-stats">
    <h2>Sprint <span id="sprint-index">{{ sprint.index }}</span></h2>
    <div class="velocity">
        <p>Planed velocity: <span class="sprint-velocity-planed"></span></p>
        <p>Actual velocity: <span class="sprint-velocity-actual"></span></p>
        <p>Burnt MD: <span class="sprint-burnt-md"></span> %</p>
        <p>Burnt SP: <span class="sprint-burnt-sp"></span> %</p>
        <p>Burnt BV: <span class="sprint-burnt-bv"></span> %</p>
    </div>
    <div id="graph-canvas"></div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="http://yui.yahooapis.com/3.4.1/build/yui/yui-min.js"></script>
<script src="{{ asset('/bundles/sitronniersmbox/js/smgraph4.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    YUI().use('SprintChart', 'node', function (Y) {
        Y.SmbSprintChart.createChart('{{ jsSprint }}');
    });
</script>
{% endblock %}

