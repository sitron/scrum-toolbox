{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block breadcrumb %}
    {% render "SitronnierSmBoxBundle:Default:breadcrumb" with {'project': entity.project.id } %}
{% endblock %}

{% block body %}
<h1>{% trans %}sprint_entity.edit{% endtrans %}</h1>

<form action="{{ path('sprint_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn" type="submit">{% trans %}submit{% endtrans %}</button>
    </p>
</form>

<ul class="record_actions unstyled">
    <li>
        <form action="{{ path('sprint_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit"><i class="icon-remove"></i> {% trans %}delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}

