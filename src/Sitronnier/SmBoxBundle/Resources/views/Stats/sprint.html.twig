{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block stylesheets %}
<link href="{{ asset('/bundles/sitronniersmbox/css/smbox.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<h1>{{ project }}</h1>
<h2>Stats for sprint {{ sprint.index }}</h2>

<canvas id="graph-canvas"></canvas>

See stats for:
<ul>
    {% for project_sprint in project_sprints %}
        <li>
            <a href="{{ path('smbox_sprint_stats', {'sprint' : project_sprint.id}) }}">Sprint {{ project_sprint.index }}</a>
        </li>
    {% endfor %}
</ul>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/bundles/sitronniersmbox/js/easel.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/bundles/sitronniersmbox/js/smgraph.js') }}" type="text/javascript"></script>
{% endblock %}
