        <div class="item">
            <p class="question">{% trans %}faq_text.question.delete{% endtrans %}</p>
            <p class="answer">{% trans %}faq_text.answer.delete{% endtrans %}</p>
        </div>
        <div class="item">
            <p class="question">{% trans %}faq_text.question.sprint_date{% endtrans %}</p>
            <p class="answer">{% trans %}faq_text.answer.sprint_date{% endtrans %}</p>
        </div>
        <div class="item">
            <p class="question">{% trans %}faq_text.question.inline_editing{% endtrans %}</p>
            <p class="answer">{% trans %}faq_text.answer.inline_editing{% endtrans %}</p>
        </div>
    </div>
{% endblock %}

