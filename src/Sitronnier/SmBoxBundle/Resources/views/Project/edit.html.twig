{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>{% trans %}project_entity.edit{% endtrans %}</h1>

<form action="{{ path('project_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn" type="submit">{% trans %}submit{% endtrans %}</button>
    </p>
</form>

<ul class="record_actions unstyled">
    <li>
        <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit"><i class="icon-remove"></i> {% trans %}delete{% endtrans %}</button>
        </form>
    </li>
</ul>
{% endblock %}

