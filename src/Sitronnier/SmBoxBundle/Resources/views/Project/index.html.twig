{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block menu %}
    {% include 'SitronnierSmBoxBundle:Default:menu.html.twig' with {'active': 'project'} %}
{% endblock %}

{% block body %}
<h1>{% trans %}project_entity.list{% endtrans %}</h1>

<a class="btn btn-success" href="{{ path('project_new') }}"><i class="icon-plus icon-white"></i> {% trans %}add.project{% endtrans %}</a>

<table class="records-list table table-striped">
    <thead>
        <tr>
            <th>{% trans %}id{% endtrans %}</th>
            <th>{% trans %}title{% endtrans %}</th>
            <th>{% trans %}actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>
                <ul class="actions">
                    <li>
                        <a class="list-btn" href="{{ path('project_show', { 'id': entity.id }) }}"><i class="icon-zoom-in"></i> {% trans %}show{% endtrans %}</a>
                    </li>
                    <li>
                        <a class="list-btn" href="{{ path('project_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> {% trans %}edit{% endtrans %}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

