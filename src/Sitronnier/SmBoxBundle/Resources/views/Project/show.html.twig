{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block breadcrumb %}
{% endblock %}

{% block body %}
<h1>{{ entity.title }}</h1>

<div>
    <ul>
        <li>
            <a href="{{ path('sprint_new', {'project': entity.id}) }}">{% trans %}add.sprint{% endtrans %}</a>
        </li>
        {% for sprint in sprints %}
        <li>
            <a href="{{ path('sprint_show', {'id': sprint.id}) }}">{% trans %}sprint{% endtrans %} {{ sprint.index }}</a>
        </li>
        {% endfor %}
    </ul>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('project_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
    </li>
    <li>
        <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{% trans %}delete{% endtrans %}</button>
        </form>
    </li>
    <li>
        <a href="{{ path('project') }}">{% trans %}see.all.project{% endtrans %}</a>
    </li>
</ul>
{% endblock %}

