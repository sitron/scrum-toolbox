{% extends "SitronnierSmBoxBundle::layout.html.twig" %}

{% block body %}
<h1>Project</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
    </tbody>
</table>

<div>
    <ul>
        {% for sprint in sprints %}
        <li>
            <a href="{{ path('sprint_show', {'id': sprint.id}) }}">Sprint {{ sprint.index }}</a>
        </li>
        {% endfor %}
    </ul>
</div>

<ul class="record_actions">
    <li>
    <a href="{{ path('sprint_new', {'project': entity.id}) }}">Add a sprint</a>
    </li>
    <li>
        <a href="{{ path('project_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
    <li>
        <a href="{{ path('project') }}">
            See all projects
        </a>
    </li>
</ul>
{% endblock %}

